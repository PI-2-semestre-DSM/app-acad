@startuml
class ConexaoBancoDeDados {
    - conexao
    + __construct()
    - conectar()
    + obterConexao()
    + __destruct()
}

class Aluno {
    - conexao
    + __construct()
    - listaAlunos()
    - trancarMatricula()
    + obterListaDeAlunos()
    + obterTrancarMatricula(id)
}

class Venda {
    - conn
    + __construct()
    + registrarVenda()
}

class Produtos {
    - conexao
    + __construct()
    - criarProduto()
    - listaDeProdutos()
    - deletarProduto()
    + obterProdutos()
    + novoProduto()
    + fazerDelecaoProduto()
    - pesquisarProduto()
}

class Pagamento {
    - conexao
    + __construct()
    - registrarPgtoMensalidade()
    + registrarPagamento()
}

class RelatorioVendas {
    - conn
    + __construct()
    + gerarRelatorio()
}

class Login {
    - conexao
    + __construct()
    + verificarCredenciais()
    + verificarLogin()
    + logout()
    + __destruct()
}

Aluno ..> ConexaoBancoDeDados : usa
Venda ..> ConexaoBancoDeDados : usa
Produtos ..> ConexaoBancoDeDados : usa
Pagamento ..> ConexaoBancoDeDados : usa
RelatorioVendas ..> ConexaoBancoDeDados : usa
Login ..> ConexaoBancoDeDados : usa
@enduml
